# ===========================================
# Beltechi CMS - Environment Variables
# ===========================================
# Copy this file to .env.local for local development
# Add these to Vercel dashboard for production

# -------------------------------------------
# Vercel Blob Storage (for media uploads)
# -------------------------------------------
# Get this from: Vercel Dashboard → Storage → Create Blob Store
BLOB_READ_WRITE_TOKEN=vercel_blob_rw_xxxxxxxxxxxxxxxx

# -------------------------------------------
# GitHub API (for content storage)
# -------------------------------------------
# Get token from: GitHub → Settings → Developer settings → Personal access tokens → Fine-grained tokens
# Required permissions: Contents (read/write) for your repo
GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxx
GITHUB_REPO=alexbeltechi/beltechi.com
GITHUB_BRANCH=main

# -------------------------------------------
# Optional: Force storage backends in development
# -------------------------------------------
# USE_BLOB_STORAGE=true      # Use Blob instead of local filesystem
# USE_GITHUB_STORAGE=true    # Use GitHub API instead of local filesystem

# -------------------------------------------
# NextAuth (if using authentication)
# -------------------------------------------
# NEXTAUTH_URL=http://localhost:3000
# NEXTAUTH_SECRET=your-secret-here
